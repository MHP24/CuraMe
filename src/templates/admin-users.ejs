                                    <th class="table__content"><img src="/assets/icons/plus-medical.svg" alt="MÃ©dico" class="user-role__img"></th>
                                <%}else if(rol == 4) {%>
                                    <th class="table__content"><img src="/assets/icons/desktop.svg" alt="Secretaria" class="user-role__img"></th>
                                <%}else if(rol == 5) {%>
                                    <th class="table__content"><img src="/assets/icons/money.svg" alt="Cajero" class="user-role__img"></th>
                                <%}else {%>
                                    <th class="table__content"><img src="/assets/icons/client.svg" alt="Client" class="user-role__img"></th>
                                <%}%>

                                <%if(activo) {%>
                                    <th class="table__content table__content--status"><img src="/assets/icons/user-check.svg" alt="Activo" class="user-enabled__img"></th>
                                <%}else {%>
                                    <th class="table__content table__content--status"><img src="/assets/icons/user-disabled.svg" alt="Inactivo" class="user-disabled__img"></th>
                                <%}%>
