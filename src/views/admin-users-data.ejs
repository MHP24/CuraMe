<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Usuario</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!--  -->
    <!-- Poppins 200-300-500-600 Courgette 400-->
    <link href="https://fonts.googleapis.com/css2?family=Courgette&family=Poppins:wght@200;300;500;600&display=swap"
        rel="stylesheet">
    <!--  -->
    <link rel="stylesheet" href="/css/utils/normalize.css">
    <link rel="stylesheet" href="/css/utils/forms-utils.css">
    <link rel="stylesheet" href="/css/admin-users.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <header class="header">
        <h1 class="header__title">Agregar Usuario</h1>
    </header>

    <div class="form-container">
        <form action="create-user" class="user-form" method="POST">
            <input type="text" class="form__input" placeholder="Rut" name="rut" autocomplete="off">
            <div class="form__group">
                <input type="text" placeholder="Nombre" class="form__input" name="name" autocomplete="off">
                <input type="text" placeholder="Apellido" class="form__input" name="lastname" autocomplete="off">
            </div>

            <div class="form__group" style="gap: 1em;">
                <input type="text" placeholder="Dirección" class="form__input" name="address" autocomplete="off">
                <input type="text" placeholder="Teléfono" class="form__input" name="phone" autocomplete="off">
            </div>

            <div class="form__group">
                <select name="role" id="" class="form__select">
                    <option value="-1" class="form__option" selected disabled>Rol</option>
                    <option value="3" class="form__option">M&eacute;dico</option>
                    <option value="4" class="form__option">Secretar&iacute;a</option>
                    <option value="5" class="form__option">Cajero</option>
                </select>

                <select name="center" id="center" class="form__select">
                    <option value="-1" class="form__option" selected disabled>Sucursal</option>
                    <% centers.forEach( ({id_sucursal, direccion}) => {%>
                        <option value="<%=id_sucursal%>" class="form__option"><%=direccion%></option>
                    <%})%>
                </select>
            </div>

            <select name="skill" id="" class="form__select">
                <option value="-1" class="form__option" selected disabled>Especialidad</option>
                <% skills.forEach( ({id_especialidad, nombre_especialidad}) => {%>
                    <option value="<%=id_especialidad%>" class="form__option"><%=nombre_especialidad%></option>
                <%})%>
            </select>

            <div class="form__group">
                <input type="email" placeholder="Email" class="form__input" name="mail" autocomplete="off">
                <input type="password" placeholder="Contraseña" class="form__input" name="password" autocomplete="off">
            </div>

            <button class="form__btn add-user-btn" type="submit">Agregar Usuario</button>
        </form>
        <div class="form__picture"></div>
    </div>
</body>
</html>