<body>
    <%- include("components/navbar.ejs")%>

        <main class="main">
            <section class="hero" id="hero">
                <div class="hero__container">
                    <video class="hero__video" src="/assets//video/hero-bg.mp4" autoplay loop muted></video>

                    <div class="hero__content">
                        <h2 class="hero__title">Nuestros especialistas a tu servicio</h2>
                        <p class="hero__subtitle">La mejor experiencia, la mejor atenci&oacute;n</p>
                    </div>

                    <div class="hero__img-container">
