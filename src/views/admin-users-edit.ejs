<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar 12345678-9</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!--  -->
    <!-- Poppins 200-300-500-600 Courgette 400-->
    <link href="https://fonts.googleapis.com/css2?family=Courgette&family=Poppins:wght@200;300;500;600&display=swap"
        rel="stylesheet">
    <!--  -->
    <link rel="stylesheet" href="/css/utils/normalize.css">
    <link rel="stylesheet" href="/css/utils/forms-utils.css">
    <link rel="stylesheet" href="/css/admin-users.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <header class="header">
        <h1 class="header__title"><%=userData[0].rut%> - <%=userData[0].nombre%> <%=userData[0].apellido%></h1>
    </header>

    <div class="form-container">
        <div class="form__picture" style="background-image: url(/assets/imgs/edit-user.jpg);"></div>
        <form action="/update-user/<%=userData[0].rut%>" class="user-form" method="POST">
            <input type="text" class="form__input" placeholder="Rut" value="<%=userData[0].rut%>" disabled>
            <div class="form__group">
                <input type="text" placeholder="Nombre" class="form__input" name="name" value="<%=userData[0].nombre%>">
                <input type="text" placeholder="Apellido" class="form__input" name="lastname" value="<%=userData[0].apellido%>">
            </div>

            <div class="form__group" style="gap: 1em;">
                <input type="text" placeholder="Dirección" class="form__input" name="address" value="<%=userData[0].direccion%>">
                <input type="text" placeholder="Teléfono" class="form__input" name="phone" value="<%=userData[0].telefono%>">
            </div>

            <div class="form__group">

                <div class="form__group--vertical">
                    <p class="form__help">Rol actual:</p>
                    <p class="form__help--content"><%=role%></p>
                    <select name="role" id="role" class="form__select">
                        <option value="3" class="form__option">M&eacute;dico</option>
                        <option value="4" class="form__option">Secretar&iacute;a</option>
                        <option value="5" class="form__option">Cajero</option>
                    </select>
                </div>

                <div class="form__group--vertical">
                    <p class="form__help">Sucursal actual:</p>
                    <p class="form__help--content"><%=sucursal%></p>
                    <select name="center" id="center" class="form__select">
                        <%centers.forEach( ({id_sucursal, direccion}) => {%>
                            <option value="<%=id_sucursal%>" class="form__option"><%=direccion%></option>
                        <%})%>
                    </select>
                </div>

            </div>
            
            <div class="form__group--vertical">
                <p class="form__help">Especialidad:</p>
                <p class="form__help--content"><%=especialidad%></p>
                <select name="skill" id="skill" class="form__select">
                    <%skills.forEach( ({id_especialidad, nombre_especialidad}) => {%>
                        <option value="<%=id_especialidad%>" class="form__option"><%=nombre_especialidad%></option>
                    <%})%>
                </select>
            </div>

            <div class="form__group">
                <input type="text" placeholder="Email" class="form__input" name="mail" value="<%=userData[0].email%>">
                <input type="password" placeholder="Contraseña" class="form__input" value="<%=userData[0].contrasena%>" disabled>
            </div>

            <button class="form__btn add-user-btn">Guardar Cambios</button>
        </form>
    </div>
</body>
</html>